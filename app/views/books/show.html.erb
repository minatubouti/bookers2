 <p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
<!--部分テンプレート-->
<%= render 'books/list', book: @book, user: @user %>

<p id="notice"></p>
<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
        <tbody>
            <tr>
               <% @book.each do |book| %>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, user_path(id: book.user.id) %></td>
              <td><%= book.body %></td>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", destroy_book_path(@book.id), mehod: :delete, "data-confirm" => "本当に消しますか" %></td>
              <% end %>
            </tr>
        </tbody>
    </table>
  </div>
 </div>
</div>