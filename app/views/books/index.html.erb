 <p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    
  <!--部分テンプレート-->
   <%= render 'books/list', book: @book, user: @user %>
    
    <!--books 一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= link_to book.title, user_path(id: book.user.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
     </div>
    </div>
  </div>
</div>
